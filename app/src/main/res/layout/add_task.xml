<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/top_rowcolour"
        android:gravity="center_vertical">

        <Button
            android:text="@string/fa_back"
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/top_rowcolour"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Task"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Task title input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is to be done?"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Task Here"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:hintTextColor="@android:color/white"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Due date input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due date"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewDueDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date not set"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/iconCalendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/fa_calendar"
            android:backgroundTint="@color/top_rowcolour"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- List selection input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to List"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Default"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/iconDropdown"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/fa_dropdown"
            android:backgroundTint="@color/top_rowcolour"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <Button
            android:id="@+id/iconList"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/fa_list"
            android:backgroundTint="@color/top_rowcolour"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Save, Delete, and Cancel buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fa_solid_900"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>


</LinearLayout>
